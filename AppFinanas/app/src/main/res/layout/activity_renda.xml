<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="0dp"
    android:orientation="vertical"
    tools:context=".RendaActivity"
    android:background="#c9ddf1">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rendas:"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textSize="40px"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Data da Renda:"
        android:textColor="#000000"
        android:textSize="40px"/>

    <!--<EditText-->
        <!--android:id="@+id/dataRend"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:ems="10"-->
        <!--android:inputType="date" />-->

    <com.vicmikhailau.maskededittext.MaskedEditText
        android:id="@+id/dataRend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        app:mask="##/##/####"
        android:inputType="date" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Informações da renda:"
        android:textColor="#000000"
        android:textSize="40px"/>


    <Spinner
        android:id="@+id/spinnerInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </Spinner>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Valor:"
        android:textColor="#000000"
        android:textSize="40px"/>

    <EditText
        android:id="@+id/valorRend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal" />

    <Button
        android:id="@+id/CadastrarRend"
        style="@style/FirebaseUI.Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cadastrar" />

</LinearLayout>